pipeline {
    agent{
        docker{
            image 'node:18-alpine'
            reuseNode true
            }
        }

    stages {
        stage('Build') {
       
            steps {
                sh '''
                ls -al
                node --version
                npm --version
                npm config set cache $WORKSPACE/.npm-cache --global
                npm ci
                npm run build
                ls -al
                '''
            }
        }
        stage('test') {
        
            steps {
                sh '''
                test -f build/index.html
                npm test
                '''
            }
        }
    }
}
