pipeline {
    agent{
        docker{
            image 'node:18-alpine'
            reuseNode true
            }
        }

    stages {
        stage('Build') {
       
            steps {
                withEnv(['NPM_CONFIG_CACHE=.npm-cache']){
                    sh '''
                    ls -al
                    node --version
                    npm --version
                    npm ci 
                    npm run build
                    ls -al
                    '''
                }
                
            }
        }
        stage('test') {
        
            steps {
                sh '''
                test -f build/index.html
                npm test
                '''
            }
        }
    }
    post{
        always{
            junit '**/test-results/*.xml'
            sh 'npm cache clean --force'
        }
    }
}
